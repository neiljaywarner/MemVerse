<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <!-- TODO: consider, should we keep colorprimary green and make toolbar be white background -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- todo: 90% opacity for title bar.  easy enough ish to change it to toolbar to accomplish that and might be a good idea anyway to demo that -->
    <style name="LoginScreen" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/text_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/text_margin_horizontal</item>

        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

</resources>
